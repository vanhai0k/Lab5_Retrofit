<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sửa thông tin Lover"
        android:textSize="23dp"
        android:gravity="center"
        android:textColor="#BC44D1"
        android:id="@+id/tv_tieude"
        android:textStyle="bold"
        android:layout_margin="15dp"
        />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="User name"
        android:layout_gravity="center"
        android:id="@+id/ed_username"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/ed_email"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="email"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/ed_diachi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Dia chi"
        android:layout_gravity="center"
        />
    <EditText
        android:id="@+id/linkanh"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="link anh"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cập nhập"
            android:id="@+id/btn_luu"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:id="@+id/btn_huy"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/tv_tb"
        android:layout_marginTop="20dp"
        />


</LinearLayout>